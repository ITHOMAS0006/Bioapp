<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linlaytest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Create Your Bio!!"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="26dp"
            android:text="First Name:" />

        <EditText
            android:id="@+id/FirstNameTextField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="First Name"
            android:inputType="text"
            android:minHeight="45dp"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="26dp"
            android:text="Last Name:" />

        <EditText
            android:id="@+id/LastNameTextField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Last Name"
            android:inputType="text"
            android:minHeight="45dp"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="46dp"
            android:text="School:" />

        <EditText
            android:id="@+id/SchoolTextField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="School"
            android:inputType="text"
            android:minHeight="45dp"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:text="Year of Graduation:" />

        <EditText
            android:id="@+id/GraduationYearTextField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Graduation"
            android:inputType="number"
            android:minHeight="45dp"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:text="Degree:" />


        <GridLayout
            android:id="@+id/DegreeRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:columnCount="3"
            android:rowCount="4">

            <RadioButton
                android:id="@+id/bs_radiobutton"
                android:layout_row="0"
                android:layout_column="0"
                android:text="B.S." />

            <RadioButton
                android:id="@+id/ms_radiobutton"
                android:layout_row="0"
                android:layout_column="1"
                android:text="M.S." />

            <RadioButton
                android:id="@+id/phd_radiobutton"
                android:layout_row="0"
                android:layout_column="2"
                android:text="Ph.D." />

            <RadioButton
                android:id="@+id/bas_radiobutton"
                android:layout_row="1"
                android:layout_column="0"
                android:text="BAS" />

            <RadioButton
                android:id="@+id/ma_radiobutton"
                android:layout_row="1"
                android:layout_column="1"
                android:text="M.A." />

            <RadioButton
                android:id="@+id/md_radiobutton"
                android:layout_row="1"
                android:layout_column="2"
                android:text="M.D." />

            <RadioButton
                android:id="@+id/ba_radiobutton"
                android:layout_row="2"
                android:layout_column="0"
                android:text="B.A." />

            <RadioButton
                android:id="@+id/mfa_radiobutton"
                android:layout_row="2"
                android:layout_column="1"
                android:text="MFA" />

            <RadioButton
                android:id="@+id/dds_radiobutton"
                android:layout_row="2"
                android:layout_column="2"
                android:text="DDS" />

            <RadioButton
                android:id="@+id/bfa_radiobutton"
                android:layout_row="3"
                android:layout_column="0"
                android:text="BFA" />

            <RadioButton
                android:id="@+id/mba_radiobutton"
                android:layout_row="3"
                android:layout_column="1"
                android:text="MBA" />

            <RadioButton
                android:id="@+id/jd_radiobutton"
                android:layout_row="3"
                android:layout_column="2"
                android:text="J.D." />


        </GridLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Major" />

        <Spinner
            android:id="@+id/major_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:dropDownHeight="80dp"
            android:entries="@array/major_options"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:scrollbars="vertical" />
        <!--i dont know how to limit the combobox to only 5 items and then users
        can use the scrollbar to see the rest. the dropdownheight doesnt work -->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Favorite Activities"
            android:textSize="18sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/FavoriteActivitiesTextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:inputType="text" />


        <Button
            android:id="@+id/CreateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:text="CREATE" />

    </LinearLayout>
    <FrameLayout
        android:id="@+id/frameLayoutcontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>


</LinearLayout>
